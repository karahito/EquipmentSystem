<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<EditText-->
        <!--android:enabled="false"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:inputType="numberSigned"/>-->
    <TextView
        android:id="@+id/row_holder_code"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="5"
        android:gravity="center"
        android:layout_margin="1dp"
        android:background="@color/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/row_holder_worker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/row_holder_worker"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:ems="3"
        android:layout_margin="1dp"
        android:background="@color/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/row_holder_code"
        app:layout_constraintRight_toLeftOf="@id/row_holder_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/row_holder_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="5"
        android:gravity="center"
        android:layout_margin="1dp"
        android:background="@color/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/row_holder_worker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

</android.support.constraint.ConstraintLayout>